{
  "version": "0.1.0",
  "manifest_version": 2,
  "offline_enabled": true,
  "name": "Audio Recorder",
  "permissions": ["storage"],
  "short_name": "audio-recorder",
  "background": {"scripts": ["lib/background.js"]},
  "homepage_url": "https://mybrowseraddon.com/audio-recorder.html",
  "description": "Easily record audio from your computer's microphone!",
  "browser_action": {
    "default_title": "Audio Recorder",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
